# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

source $ZSH/oh-my-zsh.sh


# Set editor
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='vim'
fi

# Aliases
alias docker-compose="docker compose --compatibility $@"

# open() {
#   xdg-open "$@" >/dev/null 2>&1 &
# }

# Directories
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Git
alias g='git'
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias gcad='git commit -a --amend'


if [ "$(tty)" = "/dev/tty1" ];then
  exec Hyprland
fi


switchyubi() {
  # Thanks https://glenngillen.com/setting-up-multiple-yubikeys/.
  rm -rf ~/.gnupg/private-keys-v1.d
  gpgconf --kill gpg-agent
  gpg --card-status
}

# Load some custom env vars
export $(cat /etc/environment | xargs)
export PATH=$HOME/.local/bin:$PATH

# Plugins using antigen
source "$HOME/.config/antigen.zsh"

antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle git
antigen bundle common-aliases
antigen bundle docker-compose
antigen bundle extract
antigen bundle git-flow-avh
antigen bundle npm
antigen bundle nvm
zstyle ':omz:plugins:nvm' autoload yes
antigen bundle ssh-agent
antigen bundle rust
antigen bundle zoxide
antigen bundle starship

# Other bundles.
antigen bundle zsh-users/zsh-autosuggestions
antigen bundle zsh-users/zsh-syntax-highlighting

# Lets go.
antigen apply

# File system aliases after plugins
alias ls='eza -lh --group-directories-first --icons=auto'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias ff="fzf --preview 'bat --style=numbers --color=always {}'"
alias cd="zd"
zd() {
  if [ $# -eq 0 ]; then
    builtin cd ~ && return
  elif [ -d "$1" ]; then
    builtin cd "$1"
  else
    z "$@" && printf "\U000F17A9 " && pwd || echo "Error: Directory not found"
  fi
}

# Add GitHub Copilot CLI
eval "$(gh copilot alias -- "$0")"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
export GPG_TTY="$(tty)"
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
gpgconf --launch gpg-agent
