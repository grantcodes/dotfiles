# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

source $ZSH/oh-my-zsh.sh


# Set editor
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='vim'
fi

# Aliases

alias docker-compse="docker compose --compatibility $@"

# Custom git helpers for Kinsta dev work
kgf() {
  echo "Creating feature: $1"
  git checkout master
  git pull
  git checkout -b feature/$1
}

kgb() {
  echo "Creating fix: $1"
  git checkout master
  git pull
  git checkout -b fix/$1
}

kgm() {
  echo "Creating maintenance: $1"
  git checkout master
  git pull
  git checkout -b maintenance/$1
}

kgd() {
  echo "Creating docs: $1"
  git checkout master
  git pull
  git checkout -b docs/$1
}

# Load some custom env vars
export $(cat /etc/environment | xargs)

# Plugins using antigen
source "$HOME/.config/antigen.zsh"

antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle git
antigen bundle common-aliases
antigen bundle docker-compose
antigen bundle extract
antigen bundle git-flow-avh
antigen bundle npm
antigen bundle nvm
antigen bundle ssh-agent

# Other bundles.
antigen bundle zsh-users/zsh-autosuggestions
antigen bundle zsh-users/zsh-syntax-highlighting

# Lets go.
antigen apply

# Add GitHub Copilot CLI
eval "$(github-copilot-cli alias -- "$0")"

# Load Starship shell prompt
eval "$(starship init zsh)"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
